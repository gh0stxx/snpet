---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";

import about from "../images/about.jpg";
import team1 from "../images/team1.png";
import team2 from "../images/team2.png";
import team3 from "../images/team3.png";
---

<MainLayout title="About The TechPeople Blog">
  <section class="container mx-auto">
    <h1 class="mb-5 text-4xl font-bold">About TechPeople</h1>
    <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
      <div class="mb-8 w-full md:mb-0 md:w-1/2">
        <Image
          src={about}
          alt="Tech People Team"
          class="h-auto w-full rounded-lg shadow-lg"
        />
      </div>
      <div class="w-full md:w-1/2">
        <h2 class="mb-4 text-3xl font-extrabold text-gray-900">Who We Are</h2>
        <p class="mb-6 leading-relaxed text-gray-700">
          We are Tech People, a passionate team of tech enthusiasts dedicated to
          bringing you the latest news, articles, and tutorials on all things
          technology.
        </p>
        <p class="mb-6 leading-relaxed text-gray-700">
          Our mission is to empower and educate our readers, helping them stay
          up-to-date with the rapidly evolving world of technology. Whether
          you're a seasoned developer, a gadget enthusiast, or just curious
          about the latest tech trends, we've got you covered.
        </p>
      </div>
    </div>

    <!-- Team -->
    <div class="mt-10">
      <h2 class="mb-8 text-3xl font-extrabold text-gray-900">Our Team</h2>
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3">
        <div class="overflow-hidden rounded-lg bg-white shadow-lg">
          <Image src={team1} alt="Team Member 1" class="h-auto w-full" />
          <div class="p-6">
            <h3 class="mb-2 text-xl font-semibold text-gray-900">John Doe</h3>
            <p class="text-gray-70">Founder & Editor-in-Chief</p>
          </div>
        </div>
        <div class="overflow-hidden rounded-lg bg-white shadow-lg">
          <Image src={team2} alt="Team Member 2" class="h-auto w-full" />
          <div class="p-6">
            <h3 class="mb-2 text-xl font-semibold text-gray-900">
              Paul Newman
            </h3>
            <p class="text-gray-70">Lead Writer</p>
          </div>
        </div>
        <div class="overflow-hidden rounded-lg bg-white shadow-lg">
          <Image src={team3} alt="Team Member 3" class="h-auto w-full" />
          <div class="p-6">
            <h3 class="mb-2 text-xl font-semibold text-gray-900">
              Johanna Johnson
            </h3>
            <p class="text-gray-70">Tech Analyst</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
