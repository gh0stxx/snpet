---
import { capitalize, formatDate } from "../utils";
import type { CollectionEntry } from "astro:content";
import Tags from "./Tags.astro";

const {article } = Astro.props;

interface Props {
  article: CollectionEntry<'blog'>;
}
---

<div class="max-w-md mx-auto mt-10">
    <div class="bg-white rounded-lg overflow-hidden shadow-lg">
      <a href={"/articles/" + article.slug}>
        <img
          transition:name={`post-image-${article.slug}`}
          src={"/images/" + article.data.image}
          alt="Article Image"
          class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
        />
      </a>
      <div class="p-6">
        <h2 transition:name={`post-title-${article.slug}`} class="text-2xl font-semibold mb-2">
          <a href={"/images/" + article.data.image}>
            {" "}
            {article.data.title}{" "}
          </a>
        </h2>
        <p  class="text-gray-600 text-sm mb-4">{formatDate(article.data.pubDate)}</p>
        <div transition:name={`post-tags-${article.slug}`}  class="flex flex-wrap gap-2">
          {article.data.tags.map((tag: string, index: number) => (
            <span
              class={
                index % 2 === 0
                  ? "px-2 py-1 bg-indigo-500 text-white rounded-full text-xs hover:opacity-90"
                  : "px-2 py-1 bg-blue-500 text-white rounded-full text-xs hover:opacity-90"
              }
            >
              <a href={"/articles/tag/" + tag}>#{capitalize(tag)}</a>
            </span>
          ))}
        </div>
      </div>
    </div>
  </div>